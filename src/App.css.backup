.checkbox-options {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.checkbox-options .checkbox-group {
  display: flex;
  align-items: center;
  gap: 8px;
}

.checkbox-options .checkbox-group label {
  display: flex !important;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  margin-bottom: 0 !important;
  font-size: 14px;
}

.checkbox-options .checkbox-group input[type="checkbox"] {
  width: auto !important;
  margin: 0;
}

.test-email-section {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.test-input-group {
  display: flex;
  gap: 10px;
  align-items: center;
}

.test-input-group input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
}

.test-input-group input:focus {
  outline: none;
  border-color: #3498db;
}

.test-input-group .btn {
  white-space: nowrap;
}

.test-email-section small {
  color: #666;
  font-style: italic;
  font-size: 12px;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .form-section .form-grid {
    grid-template-columns: 1fr;
  }
  
  .test-input-group {
    flex-direction: column;
    align-items: stretch;
  }
  
  .test-input-group .btn {
    width: 100%;
    justify-content: center;
  }
  
  .form-actions {
    justify-content: stretch;
  }
  
  .form-actions .btn {
    width: 100%;
    justify-content: center;
  }
}